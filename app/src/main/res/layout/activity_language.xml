<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leyLanguage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBgColorGray"
    android:orientation="vertical"
    tools:context="com.simprosys.scan.qrcode.barcode.reader.activity.LanguageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/appBarLayout"
            layout="@layout/app_bar_layout_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>

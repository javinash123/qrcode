<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frmQrAndBarCodeGenerate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mar_2"
    android:layout_marginTop="@dimen/mar_2"
    android:background="@color/frmBgColorGray"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/img_icon_width"
            android:layout_height="@dimen/img_icon_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/mar_10"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_text" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mar_10"
            android:layout_marginEnd="@dimen/mar_10"
            android:layout_marginBottom="@dimen/mar_10"
            android:gravity="center"
            android:paddingBottom="@dimen/pad_5"
            android:textAlignment="center"
            android:textColor="@color/txtColorHorizon"
            android:textSize="@dimen/txt_size_14" />

    </LinearLayout>

</FrameLayout>